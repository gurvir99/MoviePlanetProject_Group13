@model ClientMoviePlanet.Models.CompanyInfo

@{
	ViewData["Title"] = "Create Company";
}

<h1>Create Movie</h1>
<hr />
<div class="row">
	<div class="col-md-2">
		<form asp-action="Create" asp-controller="CompanyInfo" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div>
				<label asp-for="CompanyName">Company Name: </label>
				<input asp-for="CompanyName" style="width: 500px" class="form-control" />
				<span asp-validation-for="CompanyName" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Headquarters">Headquarters: </label>
				<input asp-for="Headquarters" style="width: 500px" class="form-control" />
				<span asp-validation-for="Headquarters" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Description">Description: </label>
				<textarea style="width: 500px" asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="YearFounded">Year Founded</label>
				<input style="width: 500px" asp-for="YearFounded" class="form-control" />
				<span asp-validation-for="YearFounded" class="text-danger"></span>
			</div>
			<div>
				<br />
				<input type="submit" value="+ Add" class="btn btn-success" />
			</div>
		</form>
	</div>
</div>


<div>
	<br />
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
